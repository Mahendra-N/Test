<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ellipsonic.quickee"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launch"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewTopic"
            android:label="@string/title_activity_add_new_topic" >
        </activity>
        <activity
            android:name=".EditTopic"
            android:label="@string/title_activity_edit_topic" >
        </activity>
        <activity
            android:name=".Category"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name=".AddNewCat"
            android:label="@string/title_activity_add_new_cat" >
        </activity>
        <activity
            android:name=".EditCategory"
            android:label="@string/title_activity_edit_category" >
        </activity>
        <activity
            android:name=".Term"
            android:label="@string/title_activity_term" >
        </activity>
        <activity
            android:name=".AddNewTerm"
            android:label="@string/title_activity_add_term" >
        </activity>
        <activity
            android:name=".EditTerm"
            android:label="@string/title_activity_edit_term" >
        </activity>
        <activity android:name=".Description"
                  android:label="@string/title_activity_description">
        </activity>
        <activity android:name=".AddDescription"
            android:label="@string/title_activity_description">
        </activity>
    </application>

</manifest>
