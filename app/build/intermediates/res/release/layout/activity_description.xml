
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ellipsomic.qweekie.MainActivity"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#3671d0" >

        <TextView
            android:id="@+id/details_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Air Force One"
            android:inputType="textCapSentences"
            android:capitalize="sentences"
            android:textSize="18dp"
            android:layout_alignBottom="@+id/desc_back_icon"
            android:layout_toLeftOf="@+id/edit_desc"
            android:layout_toStartOf="@+id/edit_desc"
            android:layout_marginRight="71dp"
            android:layout_marginEnd="71dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/desc_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_back_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_desc"
            android:src="@drawable/ic_edit"
            android:layout_alignTop="@+id/desc_delete"
            android:layout_toLeftOf="@+id/desc_delete"
            android:layout_toStartOf="@+id/desc_delete"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_delete"
            android:src="@drawable/ic_delete"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/details_header"/>


    </RelativeLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_marginTop="2dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal" />

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
