<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dropbox_bg"
>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Link to Dropbox"
        android:background="#e8e7e3"
        android:id="@+id/link"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export to Dropbox"
        android:background="#e8e7e3"
        android:id="@+id/export"
        android:layout_below="@+id/link"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/link"
        android:layout_alignStart="@+id/link"
        android:layout_alignRight="@+id/link"
        android:layout_alignEnd="@+id/link"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from Dropbox"
        android:layout_marginTop="8dp"
        android:background="#e8e7e3"
        android:id="@+id/import_from"
        android:layout_below="@+id/export"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unlink"
        android:id="@+id/unlink"
        android:background="#e8e7e3"
        android:layout_below="@+id/import_from"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/import_from"
        android:layout_alignStart="@+id/import_from"
        android:layout_alignRight="@+id/import_from"
        android:layout_alignEnd="@+id/import_from"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />


</RelativeLayout>
