        <activity
            android:name="com.ellipsonic.quickee.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddNewTopic"
            android:label="@string/title_activity_add_new_topic" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditTopic"
            android:label="@string/title_activity_edit_topic" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.Category"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddNewCat"
            android:label="@string/title_activity_add_new_cat" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditCategory"
            android:label="@string/title_activity_edit_category" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.Term"
            android:label="@string/title_activity_term" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddNewTerm"
            android:label="@string/title_activity_add_term" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditTerm"
            android:label="@string/title_activity_edit_term" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.Description"
            android:label="@string/title_activity_description" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditDescription"
            android:label="@string/title_activity_edit_description" >
        </activity>
    </application>

</manifest>