<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ellipsonic.com"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launch"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.ellipsonic.quickee.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddNewTopic"
            android:label="@string/title_activity_add_new_topic" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditTopic"
            android:label="@string/title_activity_edit_topic" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.Category"
            android:label="@string/title_activity_category"
            android:parentActivityName="com.ellipsonic.quickee.MainActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ellipsonic.quickee.MainActivity" />
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddNewCat"
            android:label="@string/title_activity_add_new_cat" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditCategory"
            android:label="@string/title_activity_edit_category" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.Term"
            android:label="@string/title_activity_term"
            android:parentActivityName="com.ellipsonic.quickee.Category" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ellipsonic.quickee.Category" />
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddNewTerm"
            android:label="@string/title_activity_add_term" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditTerm"
            android:label="@string/title_activity_edit_term" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.Description"
            android:label="@string/title_activity_description"
            android:parentActivityName="com.ellipsonic.quickee.Term" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ellipsonic.quickee.Term" />
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AddDescription"
            android:label="@string/title_activity_description" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.EditDescription"
            android:configChanges="orientation"
            android:label="@string/title_activity_edit_description" >
        </activity>
        <activity
            android:name="com.ellipsonic.com.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.MoveCategory"
            android:label="@string/title_activity_move__category" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.MoveTerm"
            android:label="@string/title_activity_move_term" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.AudioRecorder"
            android:label="@string/title_activity_audio_recorder" >
        </activity>
        <activity
            android:name="com.ellipsonic.quickee.ZoomActivity"
            android:label="@string/title_activity_zoom" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
    </application>

</manifest>